<UserControl x:Class="SqlSaucey.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SqlSaucey.Views"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.Column="0" Grid.Row="0">
            <MenuItem Header="File" >
                <MenuItem Name="menuItemNewSetup" Header="New Setup" Command="{Binding ClickNewSetup}"></MenuItem>
                <MenuItem Header="Import Setup"></MenuItem>
                <MenuItem Header="Export Current Setup">
                </MenuItem>
            </MenuItem>
        </Menu>
        <ComboBox Grid.Column="0" Grid.Row="1" 
                  ItemsSource="{Binding SetupItems}" DisplayMemberPath="Name"
                  SelectedValue="{Binding SelectedSetupItem}">
        </ComboBox>
    </Grid>
</UserControl>
