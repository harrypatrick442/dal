<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:SqlSaucey.CustomControls">




    <Style TargetType="{x:Type customControls:FolderBrowserDialog}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type customControls:FolderBrowserDialog}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Button x:Name="buttonBrowse" Command="{Binding ButtonCommand,RelativeSource={RelativeSource AncestorType={x:Type customControls:FolderBrowserDialog}}}">
                            <TextBlock Text="{TemplateBinding Text}"></TextBlock></Button>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
